<body>
    <div class="container">
        <div class="header">
            <h1>ðŸŽ“ StudyPal AI</h1>
            <p>Your intelligent study companion - Ask me anything about any subject!</p>
        </div>

        <div class="subject-buttons">
            <button class="subject-btn" onclick="quickQuestion('math')">ðŸ“Š Mathematics</button>
            <button class="subject-btn" onclick="quickQuestion('science')">ðŸ”¬ Science</button>
            <button class="subject-btn" onclick="quickQuestion('history')">ðŸ“œ History</button>
            <button class="subject-btn" onclick="quickQuestion('english')">ðŸ“š English</button>
            <button class="subject-btn" onclick="quickQuestion('programming')">ðŸ’» Programming</button>
        </div>

        <div class="chat-container" id="chatContainer">
            <div class="message bot-message">
                ðŸ‘‹ Hello! I'm StudyPal, your AI study companion! 
                I can help you with mathematics, science, history, English, programming, and more! 
                What would you like to learn about today?
            </div>
        </div>

        <div class="typing-indicator" id="typingIndicator">
            StudyPal is typing...
        </div>

        <div class="input-container">
            <input type="text" id="userInput" placeholder="Ask about any subject (e.g., 'Explain photosynthesis' or 'Help with algebra')..." 
                   onkeypress="handleKeyPress(event)">
            <button id="sendButton" onclick="sendMessage()">Send</button>
        </div>
    </div>

    <script>
        const chatContainer = document.getElementById('chatContainer');
        const userInput = document.getElementById('userInput');
        const typingIndicator = document.getElementById('typingIndicator');

        // Sample knowledge base - you can expand this!
        const knowledgeBase = {
            math: {
                'algebra': 'Algebra is the branch of mathematics dealing with symbols and rules for manipulating those symbols. It helps solve equations and understand relationships between variables.',
                'geometry': 'Geometry studies shapes, sizes, positions, and properties of space. Key concepts include points, lines, angles, surfaces, and solids.',
                'calculus': 'Calculus is the mathematical study of continuous change. It has two main branches: differential calculus and integral calculus.'
            },
            science: {
                'photosynthesis': 'Photosynthesis is the process where plants convert light energy, usually from the sun, into chemical energy. The equation is: 6COâ‚‚ + 6Hâ‚‚O â†’ Câ‚†Hâ‚â‚‚Oâ‚† + 6Oâ‚‚',
                'gravity': 'Gravity is the force that attracts two bodies toward each other. On Earth, it gives weight to physical objects.',
                'cells': 'Cells are the basic structural and functional units of all living organisms. They can be prokaryotic (bacteria) or eukaryotic (plants, animals).'
            },
            history: {
                'world war ii': 'World War II was a global war that lasted from 1939 to 1945. It involved most of the world\'s nations and was the deadliest conflict in human history.',
                'ancient rome': 'Ancient Rome was a civilization that began on the Italian Peninsula and grew to become one of the largest empires in the ancient world.',
                'renaissance': 'The Renaissance was a period in European history marking the transition from the Middle Ages to modernity, characterized by a cultural and artistic revival.'
            },
            programming: {
                'html': 'HTML (HyperText Markup Language) is the standard markup language for creating web pages. It describes the structure of a web page.',
                'javascript': 'JavaScript is a programming language that enables interactive web pages. It\'s an essential part of web applications.',
                'python': 'Python is a high-level programming language known for its readability and versatility. It\'s great for beginners and professionals alike.'
            }
        };

        function handleKeyPress(event) {
            if (event.key === 'Enter') {
                sendMessage();
            }
        }

        function sendMessage() {
            const message = userInput.value.trim();
            if (!message) return;

            // Add user message to chat
            addMessage(message, 'user');
            userInput.value = '';

            // Show typing indicator
            typingIndicator.style.display = 'block';

            // Simulate AI thinking
            setTimeout(() => {
                typingIndicator.style.display = 'none';
                const response = generateResponse(message.toLowerCase());
                addMessage(response, 'bot');
            }, 1000 + Math.random() * 1000);
        }

        function quickQuestion(subject) {
            const questions = {
                math: "Can you explain quadratic equations?",
                science: "What is Newton's first law of motion?",
                history: "Tell me about the Industrial Revolution",
                english: "Explain what metaphors and similes are",
                programming: "What's the difference between HTML and CSS?"
            };
            
            userInput.value = questions[subject];
            sendMessage();
        }

        function generateResponse(userMessage) {
            // Check for specific topics in the knowledge base
            for (const subject in knowledgeBase) {
                for (const topic in knowledgeBase[subject]) {
                    if (userMessage.includes(topic)) {
                        return knowledgeBase[subject][topic];
                    }
                }
            }

            // Default responses based on keywords
            if (userMessage.includes('hello') || userMessage.includes('hi')) {
                return "Hello! I'm excited to help you learn! What subject are you interested in today? ðŸ“š";
            } else if (userMessage.includes('thank')) {
                return "You're welcome! I'm always happy to help with your studies. What else would you like to know? ðŸ˜Š";
            } else if (userMessage.includes('math') || userMessage.includes('algebra') || userMessage.includes('calculus')) {
                return "I'd love to help with mathematics! I can explain concepts like algebra, geometry, calculus, or help with specific problems. What math topic interests you?";
            } else if (userMessage.includes('science') || userMessage.includes('biology') || userMessage.includes('physics') || userMessage.includes('chemistry')) {
                return "Science is fascinating! I can help with biology, chemistry, physics, or earth sciences. What specific scientific concept would you like to explore?";
            } else if (userMessage.includes('history') || userMessage.includes('historical')) {
                return "History helps us understand our world! I can discuss ancient civilizations, world wars, important historical figures, or specific time periods. What historical topic interests you?";
            } else {
                return "That's an interesting question! While I'm still learning, I can help you with mathematics, science, history, English, programming, and many other subjects. Could you be more specific about what you'd like to know?";
            }
        }

        function addMessage(text, sender) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${sender}-message`;
            messageDiv.textContent = text;
            chatContainer.appendChild(messageDiv);
            chatContainer.scrollTop = chatContainer.scrollHeight;
        }

        // Initialize with a welcome message after a short delay
        setTimeout(() => {
            addMessage("You can ask me questions like:\nâ€¢ 'Explain photosynthesis'\nâ€¢ 'What is algebra?'\nâ€¢ 'Tell me about World War II'\nâ€¢ 'Help with programming concepts'\n\nJust type your question or click on a subject button above!", 'bot');
        }, 2000);
    </script>
</body>
